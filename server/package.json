{
  "name": "server",
  "version": "2.1.0",
  "description": "Typescript Project Template for Back End Development",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "ts:start": "ts-node src/server.ts",
    "dev": "tsnd --respawn --transpile-only --exit-child src/server.ts",
    "debug": "tsnd --respawn --transpile-only --exit-child --debug src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "node",
    "nodejs",
    "template",
    "prisma",
    "backend"
  ],
  "author": {
    "name": "Nivaldo Farias",
    "url": "https://github.com/NivaldoFarias"
  },
  "engines": {
    "node": ">=18.12.1",
    "npm": ">=8.19.2",
    "yarn": ">=1.22.19"
  },
  "license": "MIT",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "axios": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "portfinder": "^1.0.32",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.17.6",
    "@types/morgan": "^1.9.9",
    "@types/mssql": "^9.1.5",
    "@types/node": "^18.0.3",
    "morgan": "^1.10.0",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.9.3"
  }
}
